<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>       
        <record id="product_template_pricelist_tree_view" model="ir.ui.view">
            <field name="name">product.template.pricelist.tree</field>
            <field name="model">product.template</field>
            <field name="priority" eval="0"/>
            <field name="arch" type="xml">
                <tree string="Catalog" colors="green:qty_available &gt; 0; red:computed_sale_price &lt; 0; orange:qty_available &lt; 1">
                    <field name="name"/>
                    <field name="product_brand_id"/>
                    <field name="seller_id"/>
                    <field name="computed_cost_price"/>
                    <field name="computed_sale_price"/>
                    <field name="qty_available"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="product_template_pricelist_action">
            <field name="name">Product Catalog</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="product_template_pricelist_tree_view"/>
            <field name="context">{"search_default_filter_to_sell":1}</field>
        </record>

        <menuitem id="product_pricelist" name="Product Catalog" parent="base.menu_product" action="product_template_pricelist_action" sequence="20"/>
    </data>
</openerp>
